        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="Animation.Translucent" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/translucent_enter</item>
        <item name="android:windowExitAnimation">@anim/translucent_exit</item>
    </style>
    <style name="Animation.Toast" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/toast_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_exit</item>
    </style>
    <style name="Animation.StatusBar" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/status_bar_enter</item>
        <item name="android:windowExitAnimation">@anim/status_bar_exit</item>
    </style>
    <style name="Animation.LockScreen" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/lock_screen_enter</item>
        <item name="android:windowExitAnimation">@anim/lock_screen_exit</item>
    </style>
    <style name="Animation.OptionsPanel" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/options_panel_enter</item>
        <item name="android:windowExitAnimation">@anim/options_panel_exit</item>
    </style>
    <style name="Animation.SubMenuPanel" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/submenu_enter</item>
        <item name="android:windowExitAnimation">@anim/submenu_exit</item>
    </style>
    <style name="Animation.TypingFilter" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_center</item>
    </style>
    <style name="Animation.TypingFilterRestore" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_center</item>
    </style>
    <style name="Animation.DropDownDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out</item>
    </style>
    <style name="Animation.DropDownUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>
    <style name="Animation.SlidingCard" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <style name="Animation.InputMethodFancy" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/input_method_fancy_enter</item>
        <item name="android:windowExitAnimation">@anim/input_method_fancy_exit</item>
    </style>
    <style name="Animation.SearchBar" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/search_bar_enter</item>
        <item name="android:windowExitAnimation">@anim/search_bar_exit</item>
    </style>
    <style name="Animation.ZoomButtons" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="Animation.Wallpaper" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/wallpaper_enter</item>
        <item name="android:windowExitAnimation">@anim/wallpaper_exit</item>
    </style>
    <style name="Animation.RecentApplications" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="ThemeFacebook" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ThemeTwitter" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Translucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:background">#80000000</item>
        <item name="android:shadowColor">#ffd2d2d2</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="DialtactsTheme" parent="@android:style/Theme.Wallpaper">
        <item name="android:windowBackground">@drawable/call_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Widget.Button" parent="@android:style/Widget">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/frameworks_res_btn_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Theme.WhiteText" parent="@android:style/Animation.DropDownDown">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="WidgetItemBackground">
        <item name="android:background">@drawable/appwidget_bg</item>
    </style>
    <style name="VendingTheme" parent="@android:style/Theme.Wallpaper">
        <item name="android:windowBackground">@drawable/custom_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Facebook" parent="@android:style/Theme.Black">
        <item name="android:windowBackground">@drawable/custom_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.DialogNoTitle" parent="@android:style/Theme.Black">
        <item name="android:windowBackground">@drawable/custom_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Widget.ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/frameworks_res_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/frameworks_res_progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    <style name="Widget.SeekBar" parent="@android:style/Widget">
        <item name="focusable">true</item>
        <item name="maxHeight">20.0dip</item>
        <item name="indeterminateOnly">false</item>
        <item name="indeterminateDrawable">@drawable/frameworks_res_progress_horizontal</item>
        <item name="progressDrawable">@drawable/frameworks_res_progress_horizontal</item>
        <item name="minHeight">20.0dip</item>
        <item name="thumb">@drawable/frameworks_res_seek_thumb</item>
        <item name="thumbOffset">8.0dip</item>
    </style>
    <style name="Widget.ListView" parent="@android:style/Widget.AbsListView">
        <item name="listSelector">@drawable/frameworks_res_list_selector_background</item>
        <item name="divider">@drawable/frameworks_res_divider_horizontal_dark_opaque</item>
    </style>
    <style name="Widget.ListView.White" parent="@android:style/Widget.AbsListView">
        <item name="listSelector">@drawable/frameworks_res_list_selector_background</item>
        <item name="divider">@drawable/frameworks_res_divider_horizontal_bright_opaque</item>
    </style>
    <style name="Widget.ListView.DropDown" parent="@android:style/Widget.ListView">
        <item name="cacheColorHint">@null</item>
        <item name="divider">@drawable/frameworks_res_divider_horizontal_bright_opaque</item>
    </style>
    <style name="Widget.ListView.Menu" parent="@android:style/Widget.ListView">
        <item name="scrollbars">vertical</item>
        <item name="fadingEdge">vertical</item>
        <item name="listSelector">@drawable/frameworks_res_menu_selector</item>
        <item name="cacheColorHint">@null</item>
        <item name="divider">@drawable/frameworks_res_divider_horizontal_bright</item>
    </style>
    <style name="Widget.GridView" parent="@android:style/Widget.AbsListView">
        <item name="listSelector">@drawable/frameworks_res_grid_selector_background</item>
    </style>   
    <style name="Theme" parent="@android:style/Theme">
        <item name="android:windowBackground">@drawable/system_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="HTC.Elegance" parent="@android:style/Theme" />
    
</resources>
